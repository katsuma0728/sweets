<h1>
  <span><%= @customer.last_name %><%= @customer.first_name %></span>さんの会員情報編集
</h1>

<p><%= @customer.id %></p>
<%= form_with model: @customer, url: admin_customer_path, metod: :patch do |f| %>
    <p>
        <label>氏名</label>
        <span><%= f.text_field :last_name %><%= f.text_field :first_name %></span>
    </p>
    <p>
        <label>フリガナ</label>
        <sapn><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></sapn>
    </p>
    <p>
        <lavel>郵便番号</lavel>
        <span><%= f.text_field :postal_code %></span>
    </p>
    <p>
        <label>住所</label>
        <span><%= f.text_field :address %></span>
    </p>
    <p>
        <label>電話番号</label>
        <span><%= f.text_field :telephone_number %></span>
    </p>
    <p>
        <label>メールアドレス</label>
        <span><%= f.text_field :email %></span>
    </p>
    <p>
        <label>会員ステータス</label>
        <span><%= f.label :is_deleted, '有効', value: 1 %><%= f.radio_button :is_deleted, '1' %></span>
        <span><%= f.label :is_deleted, '退会', value: 0 %><%= f.radio_button :is_deleted, '0' %></span>
    </p>
    <%= f.submit '変更を保存', class: "btn btn-success" %>
    <%= end %>