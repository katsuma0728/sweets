<div class = "container">
  <div class="row mt-5">
    <h4 class = "d-flex p-2 bd-highlight text-white bg-dark">会員一覧</h4>
  </div>
  <div class="row  mt-5 justify-content-center ">
    <table class = "table table-striped">
      <thead>
        <tr>
          <th>会員id</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to customer.last_name, admin_customer_path(customer.id) %>
              <%= link_to customer.first_name, admin_customer_path(customer.id) %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




