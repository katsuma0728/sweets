<div class = "container">
  <div class="row mt-5">
    <div class = "col-lg-2 text-white bg-dark text-center">
      <h4>会員一覧</h4>
    </div>
  </div>
  <div class="row  mt-3 justify-content-center ">
    <table class = "table table-striped">
      <thead>
        <tr>
          <th>会員id</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.customer_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted ? '退会' : '有効' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   <%= paginate @customers %>
  </div>
</div>




