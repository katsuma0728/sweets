<div class = "container">
  <div class = "row mt-5">
    <div class = "col-lg-6 text-white bg-dark text-center">
      <h5><%= @customer.customer_name %>さんの会員詳細</h5>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-lg-8">
      <table cellpadding = "10">
        <tr>
          <th>会員ID</th><td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th><td><%= @customer.customer_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th><td><%= @customer.name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th><td><%= @customer.is_deleted ? '退会' : '有効' %></td>
        </tr>
        <tr>
          <th></th><td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></td><td><%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer.id), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>


