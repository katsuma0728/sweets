<div class = "container">
  <div class="row mt-5">
    <h4 class = "d-flex p-2 bd-highlight text-white bg-dark">ジャンル一覧・追加</h4>
    </div>
    <div class="row mt-2">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <label>ジャンル名</label>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
  <% end %>
  </div>

<div class="row mt-5">
  <div class="col-lg-6">
    <table class = "table table-striped ">
      <thead>
        <tr>
          <th></th>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td></td>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <button class = "btn btn-success"><%= link_to '編集する', edit_admin_genre_path(genre.id) %></button>
              </td>
            </tr>
           <% end %>
      </tbody>
    </table>
  </div>
</div>