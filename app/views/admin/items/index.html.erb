<div class = "container">
  <div class="row mt-5">
    <div class = "col-lg-2 text-white bg-dark text-center">
        <h4>商品一覧</h4>
    </div>
    <div class = "col-lg-9 text-right">
        <%= link_to new_admin_item_path  do %>
          <button class = "btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
        <% end %>
    </div>
  </div>
  <div class="row  mt-3 justify-content-center ">
    <table class = "table table-striped">
      <thead>
        <tr>
          <th>商品id</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active == true ? "販売中" : "販売停止中" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>
