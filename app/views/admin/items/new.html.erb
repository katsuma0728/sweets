<h1>Admin:商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <p>商品画像</p>
  <%= f.file_field :image, accept: "image/*" %>
  <p>商品名</p>
  <%= f.text_field :name %>
  <p>商品説明</p>
  <%= f.text_area :introduction %>
  <p>ジャンル</p>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: true %>
  <p>税込価格</p>
  <%= f.text_field :price %>円
  <p>販売ステータス</p>
  <%= f.select :is_active, [['販売中',0],['販売停止中',1]], { include_blank: true, selected: 0 } %>
  <%= f.submit '新規登録' %>
<% end %>
  
