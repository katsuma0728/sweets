<div class = "container">
  <div class="row mt-5">
    <h4 class = "d-flex p-2 bd-highlight text-white bg-dark">商品新規登録</h4>
  </div>
</div>
<div class = "container text-center">
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <p>
      <label>商品画像</label>
      <%= f.file_field :image, accept: "image/*" %>
    </p>
    <p>
      <label>商品名</label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label>商品説明</label>
      <%= f.text_area :introduction %>
    </p>
    <p>
      <label>ジャンル</label>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: true %>
    </p>
    <p>
      <label>税抜価格</label>
      <%= f.text_field :price %>円
    </p>
    <p>
      <label>販売ステータス</label>
      <%= f.label :is_active, '販売中', value: 1 %><%= f.radio_button :is_active, '1' %>
      <%= f.label :is_active, '販売停止中', value: 0 %><%= f.radio_button :is_active, '0' %>
    </p>
    <div><%= f.submit '新規登録', class: "btn btn-success"%></div>
  <% end %>
</div>

