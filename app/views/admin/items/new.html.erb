<div class = "container">
  <div class = "row">
    <h4 class = "col-lg-4">商品新規登録</h4>
  </div>
  <div class = "row mt-3">
    <div class = "col-lg-4"></div>
      <div class = "col-lg-8 mt-5">
        <div class = "mt-3">
        <%= form_with model: @item, url: admin_items_path do |f| %>
          <span class = "col-lg-3">商品画像</span><span class = "col-lg-5"><%= f.file_field :image, accept: "image/*" %></span><br>
          <span class = "col-lg-3">商品名</span><span class = "col-lg-5"><%= f.text_field :name %></span></br>
          <span class = "col-lg-3">商品説明</span><span class = "col-lg-5"><%= f.text_area :introduction %></span></br>
          <span class = "col-lg-3">ジャンル</span><span class = "col-lg-5"> <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: true %></span><br>
          <span class = "col-lg-3">税抜価格</span><span class = "col-lg-5"><%= f.text_field :price %>円</span></br>
          <span class = "col-lg-3">販売ステータス</span>
          <span class = "col-lg-5">
            <%= f.label :is_active, '販売中', value: 1 %><%= f.radio_button :is_active, '1' %>
            <%= f.label :is_active, '販売停止中', value: 0 %><%= f.radio_button :is_active, '0' %>
          </span></br>
          <span class = "col-lg-3"></span><span class = "col-lg-5"><%= f.submit '新規登録', class: "btn btn-success" %></span>
        <% end %>
        </div>
      </div>
  </div>
</div>