<div class = "container">
<% if @item.errors.any? %>
  <%= @item.errors.count %>件の未入力があります
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class = "row mt-5">
    <div class = "col-lg-2 text-white bg-dark text-center">
      <h4>商品新規登録</h4>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-lg-6 offset-3">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <table cellpadding = "10">
          <tr>
            <th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th><td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th><td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th><td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: "--選択してください--" %></td>
          </tr>
          <tr>
            <th>税抜価格</th><td><%= f.text_field :price %>円</td>
          </tr>
          <tr>
            <th>販売ステータス</th><td><%= f.label :is_active, '販売中', value: 1 %><%= f.radio_button :is_active, '1' %><%= f.label :is_active, '販売停止中', value: 0 %><%= f.radio_button :is_active, '0' %></td>
          </tr>
          <tr>
            <th></th><td><%= f.submit '新規登録', class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
