<div class = "container">
  <div class="row mt-5">
    <h4>注文履歴一覧</h4>
  </div>
   <div class="row  mt-5 justify-content-center ">
      <table class = "table table-striped">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
              <td><%= link_to order.customer.last_name + order.customer.first_name, admin_order_path(order.id) %></td>
              <td><%= order.order_items.amount %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
