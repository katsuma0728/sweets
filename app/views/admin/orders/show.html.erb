<h2>注文履歴詳細</h2>

<div class = "container">
  <div class = "row">
    <div class = "col">
      <table>
        <tr>
          <th>購入者</th><td><%= @order.customer.last_name + @order.customer.first_name %></td>
        </tr>
        <tr>
          <th>注文日</th><td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th><td><%= @order.order_shipping_display %></br><%= @order.shipping_name %> </td>
        </tr>
        <tr>
          <th>支払方法</th><td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
              <%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
              <%= f.submit '更新' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.purchase_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %><% @total += order_item.subtotal %></td>
              <td>
                <%= form_with model: order_item, url: admin_order_item_path, method: :patch do |f| %>
                  <%= f.select :production_status, OrderItem.production_statuses.keys.map {|k| [I18n.t("enums.order_item.production_status.#{k}"), k]} %>
                    <%= f.hidden_field :order_item_id, :value => order_item.id %>
                  <%= f.submit '更新' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "row">
      <table>
        <tr>
          <th>商品合計</th><td><%= @total %></td>
          <th>送料</th><td><%= @order.postage %></td>
          <th>請求金額</th><td><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
</div>