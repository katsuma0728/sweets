<!DOCTYPE html>
<html>
  <head>
    <title>Sweets</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = "sticky-top">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Sweets</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" >
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class = "nav-item mx-3">
                <%= link_to admin_items_path do %>
                  <button class="btn btn-outline-success me-2" type="button">商品一覧</button>
                <% end %>
              </li>
              <li class = "nav-item mx-3">
                <%= link_to admin_customers_path do %>
                  <button class="btn btn-outline-success me-2" type="button">会員一覧</button>
                <% end %>
              </li>
              <li class = "nav-item mx-3">
                <%= link_to admin_orders_path do %>
                  <button class="btn btn-outline-success me-2" type="button">注文履歴一覧</button>
                <% end %>
              </li>
              <li class = "nav-item mx-3">
                <%= link_to admin_genres_path do %>
                  <button class="btn btn-outline-success me-2" type="button">ジャンル一覧</button>
                <% end %>
              </li>
              <li class = "nav-item mx-3">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <button class="btn btn-outline-success me-2" type="button">ログアウト</button>
                <% end %>
              </li>
            <% else %>
              <li class = "nav-item mx-3">
                <%= link_to about_path do %>
                  <button class="btn btn-outline-success me-2" type="button">About</button>
                <% end %>
              </li>
              <li class = "nav-item mx-3">
                <%= link_to items_path do %>
                  <button class="btn btn-outline-success me-2" type="button">商品一覧</button>
                <% end %>
              </li>
              <li class = "nav-item">
                <%= link_to new_customer_registration_path do %>
                  <button class="btn btn-outline-success me-2" type="button">新規登録</button>
                <% end %>
              </li>
              <li class = "nav-item mx-3">
                <%= link_to new_customer_session_path do %>
                  <button class="btn btn-outline-success me-2" type="button">ログイン</button>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
         </div>
        </nav>
        <div class="text-bottom row bg-light">
          <input type="text" class="form-control col-md-2 offset-md-9 " placeholder="キーワードを入力">
          <button class="btn btn-outline-success col-md-1" type="button" id="button-addon2"><i class="fas fa-search"></i> 検索</button>
        </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="fixed-bottom bg-dark text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <h1>ながのCAKE</h1>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
