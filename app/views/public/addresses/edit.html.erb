<div class = "container">
  <div class = "row">
    <div class = "col">
      <h2>配送先編集</h2>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
      <h4>郵便番号（ハイフンなし）</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>
      <h4>宛名</h4>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>