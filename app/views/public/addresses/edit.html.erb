<div class = "container">
  <div class = "row mt-5">
    <div class = "col-lg-3">
      <h5>配送先編集</h5>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-lg-8">
      <table cellpadding = 10>
      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
          <tr>
            <th><%= f.label :postal_code, '郵便番号(ハイフンなし)' %></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th><%= f.label :address, '住所' %></th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th><%= f.label :name, '宛名' %></th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>