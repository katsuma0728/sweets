<div class = "container">
  <div class = "row mt-5">
    <div class = "col-lg-4">
      <h4>ショッピングカート</h4>
    </div>
    <div class = "col-lg-2 offset-6">
      <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class = "row mt-3">
    <div class = "col">
      <table class = "table table-bordered border-dark">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image(80,80) %>     <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
              <%= f.select :amount, *[1..40] %>
              <%= f.submit '変更', class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %><% @total += cart_item.subtotal %></td>
            <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class = "row mt-3">
    <div class = "col-lg-3">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
    </div>
    <div class = "col-lg-2 offset-7">
      <table class = "table table-bordered border-dark">
        <tr>
            <td>合計金額</td>
            <td><%= @total %></td>
          </tr>
      </table>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-lg-4 offset-5">
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
