<div class = "container">
  <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件の未入力があります
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
  <% end %>
  <div class = "row mt-5">
    <div class = "col">
      <h5>会員情報編集</h5>
    </div>
  </div>
  <div class = "row mt-3">
   <div class = "col-lg-8">
      <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
        <table cellpadding = 10>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
            <td></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
            <td></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
            <td></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '変更を保存' , class: "btn btn-success" %></td>
            <td><%= link_to '退会する', confirm_unsubscribe_path(@customer.id), class: "btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>