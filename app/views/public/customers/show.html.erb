<div class = "container">
  <div class = "row">
    <div class = "col">
      <h2>マイページ</h2>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <span>登録情報</span>
      <button class = ""><%= link_to "編集する", edit_customer_path(current_customer.id) %></button>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <table>
        <tr>
          <th>氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <div class = "d-flex">
        <h4>配送先</h4><span><%= link_to "一覧を見る", addresses_path %></span>
      </div>
      <div class = "d-flex">
        <h4>注文履歴</h4><span><%= link_to "一覧を見る", orders_path %></span>
      </div>
    </div>
  </div>
</div>