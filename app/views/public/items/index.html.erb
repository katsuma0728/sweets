<div class = "container">
  <div class = "row">
    <div class = "col">
      <h2>商品一覧</h2>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-2 border border-dark">
      <% @genres.each do |genre| %>
        <%= link_to items_path(genre_id: genre.id) do %>
          <%= genre.name %></br>
        <% end %>
      <% end %>
    </div>
    <div class = "col">
      <div class = "d-flex">
          <% @items.each do |item| %>
            <%= link_to item_path(item.id) do %>
              <div class = "item mx-2">
                <p><%= image_tag item.get_image(200,200) %></p>
                <p><%= item.name %></p>
                <p><%= item.with_tax_price %></p>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>