<div class = "container">
  <div class = "row">
    <div class = "col">
      <%= image_tag @item.get_image(300,300) %>
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <h3><%= @item.with_tax_price %></h3>
      <div>（税込）</div>
      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
      <div><%= f.select :amount, *[1..40] %></div>
      <div><%= f.hidden_field :item_id, :value => @item.id %></div>
      <div><%= f.submit 'カートに入れる' %></div>
      <% end %>
    </div>
  </div>
</div>