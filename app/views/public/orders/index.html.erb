<div class = "container">
  <div class = "row mt-5">
    <div class = "col">
      <h5>注文履歴一覧</h5>
    </div>
  </div>
  <div class = "row mt-3">
    <div class = "col-lg-10 offset-2">
      <table class = "table-bordered border-dark">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= l order.created_at %></td>
              <td><%= order.order_shipping_display %></td>
              <td>
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %></br>
                <% end %>
              </td>
              <td><%= order.billing_amount %></td>
              <td><%= order.order_status_i18n %></td>
              <td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>