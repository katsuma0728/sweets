<h2>注文履歴</h2>
<div class = "container">
  <div class = "row">
    <div class = "col">
      <table>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.shipping_postal_code + order.shipping_address + order.shipping_name %></td>
              <td>
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %></br>
                <% end %>
              </td>
              <td><%= order.billing_amount %></td>
              <td><%= order.order_status_i18n %></td>
              <td><%= link_to '表示する', order_path(order.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>