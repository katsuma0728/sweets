<div class = "container">
  <div class = "row mt-5">
    <div class = "col-lg-4">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-lg-6 offset-2">
      <h5>注文情報</h5>
      <table cellpadding = 10 border= 3>
        <tr>
          <th>注文日</th>
          <td><%= l @order.created_at, format: :short %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.order_shipping_display %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row mt-5">
    <div class = "col-lg-5 offset-2">
      <h5>注文内容</h5>
      <table cellpadding = 10 border= 3>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.purchase_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %><% @total += order_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = "col-lg-4">
      <h5>請求情報</h5>
      <table cellpadding = 10 border= 3>
        <tr>
          <th>商品合計</th><td><%= @total %></td>
        </tr>
        <tr>
          <th>配送料</th><td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求金額</th><td><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
