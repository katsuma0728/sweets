<div class = "container-fluid">
  <div class = "row mt-5">
    <div class = "col-lg-3 offset-2">
      <h4>新規会員登録</h4>
    </div>
  </div>
  <div class = "row mt-3 justify-content-center">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table cellpadding = 10>
        <tr>
          <th>名前</th>
          <td><%= f.label "(姓)" %><%= f.text_field :last_name %></td>
          <td><%= f.label "(名)" %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.label "(セイ)" %><%= f.text_field :last_name_kana %></td>
          <td><%= f.label "(メイ)" %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>パスワード(６文字以上)</th>
          <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td>
             <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th></th><td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class = "row">
    <div class = "col-lg-3 offset-2">
      <h4>既に登録済みの方</h4></br>
      <p>
        <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
      </p>
    </div>
  </div>
</div>
